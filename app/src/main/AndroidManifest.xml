<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itres.farmservicesystem">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:theme="@style/Theme.FarmServiceSystem"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher">
        <activity
            android:name="com.itres.farmservicesystem.activities.AddAddressActivity"
            android:exported="false"/>
        <activity
            android:name="com.itres.farmservicesystem.activities.AddressActivity"
            android:exported="false"/>
        <activity
            android:name="com.itres.farmservicesystem.activities.CartActivity"
            android:exported="false"/>
        <activity
            android:name="com.itres.farmservicesystem.activities.ShowAllActivity"
            android:exported="false"
            />
        <activity
            android:name="com.itres.farmservicesystem.activities.DetailedActivity"
            android:exported="false"/>
        <activity
            android:name="com.itres.farmservicesystem.activities.OnBoardingActivity"
            android:exported="true"/>
        <activity
            android:name="com.itres.farmservicesystem.activities.LoginActivity"
            android:exported="false"/>
        <activity
            android:name="com.itres.farmservicesystem.activities.RegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.itres.farmservicesystem.activities.MainActivity"
            android:exported="true"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts"/>
    </application>
</manifest>